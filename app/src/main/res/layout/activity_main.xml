<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:contentDescription="@string/background"
        android:scaleType="centerCrop"
        android:src="@drawable/soccer" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="4dp"
                card_view:contentPadding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/teamA"
                            android:textSize="32sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/teamB"
                            android:textSize="32sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/goalsBtnTeamA"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center_vertical"
                            android:text="@string/plus" />

                        <TextView
                            android:id="@+id/goalsTeamA"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_margin="8dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textAppearance="?android:textAppearanceMedium"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/goals"
                            android:layout_margin="8dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textAppearance="?android:textAppearanceMedium"/>

                        <TextView
                            android:id="@+id/goalsTeamB"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_margin="8dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textAppearance="?android:textAppearanceMedium"
                            tools:ignore="HardcodedText" />

                        <Button
                            android:id="@+id/goalsBtnTeamB"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center_vertical"
                            android:text="@string/plus" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="4dp"
                card_view:contentPadding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/shotsBtnTeamA"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center_vertical"
                            android:text="@string/plus" />

                        <TextView
                            android:id="@+id/shotsTeamA"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_margin="8dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textAppearance="?android:textAppearanceSmall"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/shots"
                            android:layout_margin="8dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textAppearance="?android:textAppearanceSmall"/>

                        <TextView
                            android:id="@+id/shotsTeamB"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_margin="8dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textAppearance="?android:textAppearanceSmall"
                            tools:ignore="HardcodedText" />

                        <Button
                            android:id="@+id/shotsBtnTeamB"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center_vertical"
                            android:text="@string/plus" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/shotsOnTargetBtnTeamA"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center_vertical"
                            android:text="@string/plus" />

                        <TextView
                            android:id="@+id/shotsOnTargetTeamA"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_margin="8dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textAppearance="?android:textAppearanceSmall"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/shots_on_target"
                            android:layout_margin="8dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textAppearance="?android:textAppearanceSmall"/>

                        <TextView
                            android:id="@+id/shotsOnTargetTeamB"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_margin="8dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textAppearance="?android:textAppearanceSmall"
                            tools:ignore="HardcodedText" />

                        <Button
                            android:id="@+id/shotsOnTargetBtnTeamB"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center_vertical"
                            android:text="@string/plus" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/foulsBtnTeamA"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center_vertical"
                            android:text="@string/plus" />

                        <TextView
                            android:id="@+id/foulsTeamA"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_margin="8dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textAppearance="?android:textAppearanceSmall"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/fouls"
                            android:layout_margin="8dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textAppearance="?android:textAppearanceSmall"/>

                        <TextView
                            android:id="@+id/foulsTeamB"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_margin="8dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textAppearance="?android:textAppearanceSmall"
                            tools:ignore="HardcodedText" />

                        <Button
                            android:id="@+id/foulsBtnTeamB"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center_vertical"
                            android:text="@string/plus" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/yellowCardsBtnTeamA"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center_vertical"
                            android:text="@string/plus" />

                        <TextView
                            android:id="@+id/yellowCardsTeamA"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_margin="8dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textAppearance="?android:textAppearanceSmall"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/yellow_cards"
                            android:layout_margin="8dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textAppearance="?android:textAppearanceSmall"/>

                        <TextView
                            android:id="@+id/yellowCardsTeamB"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_margin="8dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textAppearance="?android:textAppearanceSmall"
                            tools:ignore="HardcodedText" />

                        <Button
                            android:id="@+id/yellowCardsBtnTeamB"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center_vertical"
                            android:text="@string/plus" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/redCardsBtnTeamA"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center_vertical"
                            android:text="@string/plus" />

                        <TextView
                            android:id="@+id/redCardsTeamA"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_margin="8dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textAppearance="?android:textAppearanceSmall"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/red_cards"
                            android:layout_margin="8dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textAppearance="?android:textAppearanceSmall"/>

                        <TextView
                            android:id="@+id/redCardsTeamB"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_margin="8dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textAppearance="?android:textAppearanceSmall"
                            tools:ignore="HardcodedText" />

                        <Button
                            android:id="@+id/redCardsBtnTeamB"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center_vertical"
                            android:text="@string/plus" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/offsidesBtnTeamA"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center_vertical"
                            android:text="@string/plus" />

                        <TextView
                            android:id="@+id/offsidesTeamA"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_margin="8dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textAppearance="?android:textAppearanceSmall"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/offsides"
                            android:layout_margin="8dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textAppearance="?android:textAppearanceSmall"/>

                        <TextView
                            android:id="@+id/offsidesTeamB"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_margin="8dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textAppearance="?android:textAppearanceSmall"
                            tools:ignore="HardcodedText" />

                        <Button
                            android:id="@+id/offsidesBtnTeamB"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center_vertical"
                            android:text="@string/plus" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/cornersBtnTeamA"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center_vertical"
                            android:text="@string/plus" />

                        <TextView
                            android:id="@+id/cornersTeamA"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_margin="8dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textAppearance="?android:textAppearanceSmall"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/corners"
                            android:layout_margin="8dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textAppearance="?android:textAppearanceSmall"/>

                        <TextView
                            android:id="@+id/cornersTeamB"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_margin="8dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textAppearance="?android:textAppearanceSmall"
                            tools:ignore="HardcodedText" />

                        <Button
                            android:id="@+id/cornersBtnTeamB"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center_vertical"
                            android:text="@string/plus" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/resetBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reset"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:padding="16dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>